              }
          }
        ],
        "responses": {
            "200": {
              "description" : "",
              "x-example":
                {
                  "rt":   ["oic.r.softwareupdate"],
                  "nv" : "my new version",
                  "purl":  "https://myvendor/myexampleurl",
                  "swupdateaction": "upgrade",
                  "swupdatestate" : "idle",
                  "swupdateresult" : 0,
                  "lastupdate" : "2015-01-09T14:30Z",
